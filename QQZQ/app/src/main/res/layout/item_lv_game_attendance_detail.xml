<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/default_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_team_list_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_default_team_log" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_team_list_logo"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_name"
                android:textColor="@color/default_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/default_black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_on_duty_times"
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_member_attendance_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_points"
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_member_personal_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_join_date"
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_member_join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/find_team_bar_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cbox_memeber_selected"
            style="@style/my_checkbox"
            android:layout_marginLeft="0dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_team_detail"
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_browse_img" />
    </LinearLayout>
</LinearLayout>