<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_layout">

    <!-- TOP BAR-->
    <com.qqzq.widget.menu.TopBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_btn_back"
        app:pageTitle="注册" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/rgb_216_216_213" />

    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_location" />

        <EditText
            android:id="@+id/edt_select_location"
            style="@style/login_edit_text"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/hint_location" />
    </LinearLayout>


    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_phone_number" />

        <EditText
            android:id="@+id/edt_phone_no"
            style="@style/login_edit_text"
            android:hint="@string/hint_phone_number"
            android:inputType="phone" />
    </LinearLayout>


    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_phone_verify_code" />

        <EditText
            android:id="@+id/edt_verify_code"
            style="@style/login_edit_text"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_phone_verify_code"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_verify_code"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@color/rgb_144_144_144"
            android:text="@string/txt_get_verify_code"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/edt_password"
            style="@style/login_edit_text"
            android:hint="@string/hint_password" />
    </LinearLayout>


    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_password_retype" />

        <EditText
            android:id="@+id/edt_password_retype"
            style="@style/login_edit_text"
            android:hint="@string/hint_password_retype" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="23dp"
        android:background="@color/rgb_240_239_237"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/cbox_qqzq_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_blue" />

        <TextView
            android:id="@+id/tv_qqzq_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="@string/txt_qqzq_agreement"
            android:textColor="@color/rgb_0_0_0"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/login_buttons"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login"
        android:text="@string/txt_register"
        android:textColor="@color/rgb_255_255_255" />
</LinearLayout>