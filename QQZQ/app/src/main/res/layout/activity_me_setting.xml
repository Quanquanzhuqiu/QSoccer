<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical">


    <!-- TOP BAR-->
    <com.qqzq.widget.menu.TopBar
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_btn_back"
        app:pageTitle="个人资料设置"
        app:rightText="保存" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/me_logo"
                android:textColor="@color/rgb_0_0_0" />


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_default_team_log" />


            <ImageView
                android:id="@+id/iv_more_info"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_nickname"
                android:textColor="@color/rgb_0_0_0" />


            <EditText
                android:id="@+id/edt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxEms="10" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_qqzq_id"
                android:textColor="@color/rgb_0_0_0" />


            <EditText
                android:id="@+id/edt_qqzq_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxEms="15" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_sex"
                android:textColor="@color/rgb_0_0_0" />


            <EditText
                android:id="@+id/edt_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_location"
                android:textColor="@color/rgb_0_0_0" />


            <EditText
                android:id="@+id/edt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:focusable="false" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_best_position"
                android:textColor="@color/rgb_0_0_0" />


            <EditText
                android:id="@+id/edt_best_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxEms="10" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_browse_img" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/rgb_255_255_255"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/me_signature"
                android:textColor="@color/rgb_0_0_0" />

            <EditText
                android:id="@+id/edt_signature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxEms="60" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>