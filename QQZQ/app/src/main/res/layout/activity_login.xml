<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_layout">

    <!-- TOP BAR-->
    <include layout="@layout/common_top_title"/>

    <LinearLayout
        style="@style/login_edit_layout"
        android:layout_marginTop="21dp">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_username" />

        <EditText
            android:id="@+id/edt_username"
            style="@style/login_edit_text"
            android:hint="@string/hint_username" />
    </LinearLayout>

    <LinearLayout style="@style/login_edit_layout">

        <ImageView
            style="@style/login_image_view"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/edt_password"
            style="@style/login_edit_text"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="@string/txt_forget_password"
        android:textColor="@color/rgb_153_153_153"
        android:textSize="14sp" />

    <Button
        style="@style/login_buttons"
        android:id="@+id/btn_login"
        android:background="@drawable/bg_login"
        android:text="@string/txt_login"
        android:textColor="@color/rgb_255_255_255" />

    <Button
        style="@style/login_buttons"
        android:id="@+id/btn_register"
        android:background="@drawable/bg_register"
        android:text="@string/txt_register"
        android:textColor="@color/rgb_9_187_7" />
</LinearLayout>