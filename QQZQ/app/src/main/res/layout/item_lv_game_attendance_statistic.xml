<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/default_white"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/iv_user_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_default_team_log" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@color/rgb_0_0_0"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_attendance_count"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/rgb_62_199_139"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_attendance_rate"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0%"
        android:textColor="@color/rgb_255_130_8"
        android:textSize="17sp" />

</LinearLayout>