<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 共通-->
    <style name="create_page_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/divider_list_bg</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- TOP BAR styles-->
    <style name="top_bar_return_btn">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/icon_return</item>
    </style>

    <style name="top_bar_middle_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">@string/top_bar_create_team</item>
        <item name="android:textColor">@color/top_bar_text_center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="top_bar_right_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">@string/top_bar_commit</item>
        <item name="android:textColor">@color/top_bar_text_right</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="linearLayout_create_team_or_activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!-- 创建球队页面styles -->
    <style name="create_team_label">
        <item name="android:textColor">@color/top_bar_text_center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="create_team_basic_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="create_team_basic_info_image_view">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/icon_star</item>
    </style>

    <style name="create_team_basic_info_label_font">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="create_team_basic_info_label" parent="create_team_basic_info_label_font">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="create_team_basic_info_edit_font">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="create_team_basic_info_edit" parent="create_team_basic_info_edit_font">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>



    <style name="my_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@drawable/selector_radio_button</item>
    </style>

    <style name="my_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <!-- 修改头像 -->
    <style name="photo_alter_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
</resources>
