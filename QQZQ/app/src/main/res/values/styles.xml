<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 共通-->
    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/rgb_240_239_237</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="create_page_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/divider_list_bg</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="linearLayout_create_team_or_activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@color/default_white</item>
    </style>


    <!-- 创建球队页面styles -->
    <style name="create_team_label">
        <item name="android:textColor">@color/top_bar_text_center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="create_team_basic_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="create_team_basic_info_image_view">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_star</item>
    </style>

    <style name="create_team_basic_info_label_font">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="create_team_basic_info_label" parent="create_team_basic_info_label_font">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="create_team_basic_info_edit_font">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="create_team_basic_info_edit" parent="create_team_basic_info_edit_font">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>


    <style name="my_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@drawable/selector_radio_button</item>
    </style>

    <style name="my_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@drawable/selector_checkbox_green</item>
    </style>

    <!-- 修改头像 -->
    <style name="photo_alter_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- 登陆页面styles -->
    <style name="login_edit_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_grey_divider_no_left_right</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_image_view">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">11.333dp</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/rgb_153_153_153</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ll_detail_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@color/default_white</item>
    </style>

    <style name="ll_detail_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="tv_detail_item_label1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/rgb_0_0_0</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="tv_detail_item_label2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/rgb_163_163_163</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_detail_item_label3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/rgb_0_0_0</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
